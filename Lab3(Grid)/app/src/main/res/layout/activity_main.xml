<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.dal.grid.MainActivity">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myGridView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:numColumns="9"/>
    <Button
        android:text="2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set2"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button" android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"/>
    <Button
        android:text="3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set3"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button" android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button2"/>
    <Button
        android:text="4"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set4"
        android:id="@+id/button4"
        android:layout_alignBaseline="@+id/button" android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button3"/>
    <Button
        android:text="5"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set5"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button4" android:layout_alignBottom="@+id/button4"
        android:layout_toEndOf="@+id/button4"/>
    <Button
        android:text="7"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set7"
        android:id="@+id/button7"
        android:layout_alignBaseline="@+id/button5" android:layout_alignBottom="@+id/button5"
        android:layout_toEndOf="@+id/button6"/>
    <Button
        android:text="8"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set8"
        android:id="@+id/button8"
        android:layout_alignBaseline="@+id/button6" android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button7"/>
    <Button
        android:text="9"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:onClick="set9"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button7" android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button8"/>
    <Button
        android:text="1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set1"
        android:id="@+id/button"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <Button
        android:text="6"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:onClick="set6"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button" android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button5"/>

</RelativeLayout>
